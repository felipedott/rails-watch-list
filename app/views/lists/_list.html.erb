<div id="lists">
  <div class="cards">

    <% lists.each do |list| %>
      <%= link_to list do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url(<%= list.poster_url %>)">
      <%= list.name %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
